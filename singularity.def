Bootstrap: docker
From: nvidia/cuda:12.4.1-cudnn-devel-ubuntu22.04

%labels
    Author Your_Name
    Version 1.0.0
    Description "UBC Cluster Environment - Ubuntu 24.04, CUDA 12.4, Python 3.12.3, PyTorch 2.6.0"
    BaseImage nvidia/cuda:12.4-cudnn9-devel-ubuntu24.04

%environment
    export PYTHONUNBUFFERED=1
    export CUDA_HOME=/usr/local/cuda
    export PATH=/usr/local/cuda/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH

%post
    # Update package manager
    apt-get update && apt-get install -y --no-install-recommends \
        python3 \
        python3-dev \
        python3-pip \
        build-essential \
        git \
        wget \
        curl \
        vim \
        unzip \
        libglib2.0-0 \
        libxext6 \
        libsm6 \
        libxrender1 \
        libgl1-mesa-dev \
        && rm -rf /var/lib/apt/lists/*
    
    # Upgrade pip
    python3 -m pip install --upgrade pip setuptools wheel
    
    # Install PyTorch with CUDA 12.4 support
    python3 -m pip install torch==2.6.0 torchvision==0.21.0 --index-url https://download.pytorch.org/whl/cu124
    
    # Install numpy
    python3 -m pip install numpy
    
    # Install mamba-ssm with causal-conv1d
    python3 -m pip install "mamba-ssm[causal-conv1d]"
    
    # Install other requirements
    python3 -m pip install scipy imageio matplotlib seaborn wandb
    
    # Install any additional requirements from your requirements.txt
    if [ -f /tmp/requirements.txt ]; then
        python3 -m pip install -r /tmp/requirements.txt
    fi
    
    # Clean up
    apt-get clean
    rm -rf /var/lib/apt/lists/*

%runscript
    exec python3 "$@"

%test
    # Test that CUDA and PyTorch are working
    python3 -c "
import torch
print(f'PyTorch version: {torch.__version__}')
print(f'CUDA available: {torch.cuda.is_available()}')
print(f'CUDA version: {torch.version.cuda}')
if torch.cuda.is_available():
    print(f'GPU device: {torch.cuda.get_device_name(0)}')
    print(f'GPU count: {torch.cuda.device_count()}')
else:
    print('CUDA not available - this is normal during build')
